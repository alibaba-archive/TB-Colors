// Font faces
@import url(https://fonts.googleapis.com/css?family=Lato)
@import url(https://fonts.googleapis.com/css?family=Ubuntu:400,700)

// Reset
*
  margin: 0
  padding: 0
  box-sizing: border-box
  font-family: 'Lato', sans-serif
  color: #FFFFFF

// Reset
html,
body,
.full-size
  width: 100%
  height: 100%

// Mixins
inverse()
  &,
  > *
    color: #383838 !important

// Global
.tb-logo
  font-family: 'Ubuntu'
  font-weight: 700

/* ==== Page: Web ==== */
.page-web
  .type-brand
    height: 61.8%

    .tb-logo
      display: inline-block
      font-size: 140px
      vertical-align: middle
      position: relative
      top: 50%
      transform: translateY(-52%)

  .type-colorful
    $height = 24px

    position: absolute
    bottom: 38.2%
    width: 100%
    height: $height
    margin-bottom: $height * 1.2
    text-align: center

    > *
      display: inline-block
      width: $height
      height: $height
      border-radius: 50%
      margin-left: $height

    .name,
    .hex
      display: none

  .type-neutral
    height: 38.2%
    display: flex

  .color
    $spacing = 8px

    position: relative
    height: 100%
    flex-grow: 1
    text-align: center
    cursor: pointer
    transition: all 218ms

    .name
      position: absolute
      top: $spacing
      left: $spacing

    .hex
      position: absolute
      bottom: $spacing
      right: $spacing

    &:hover
      opacity: 0.8

    &.gray,
    &.grayLight,
    &.grayLighter,
    &.white
      inverse()
