doctype html
html(lang="en")
  head
    title TB-Colors for Web
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel="shortcut icon", href="data:image/png;base64,")
    link(rel="stylesheet", href='../styles.css')

  body.page-web
    .color-palette.full-size
      each type, key in colors
        div(class="type-#{key}")
          each hex, name in type
            - var purpose = hex.purpose
            - hex = utils.getHex(hex)
            - var colorfulTitle = (key === 'colorful' ? '$' + name + ' = ' + hex: '')
            div(class="color #{name}", style = {"background-color": hex}, "data-clipboard-text"= hex, title=colorfulTitle)
              if key == 'brand'
                span.tb-logo t
              span.name $#{name}
              span.hex #{hex}
              if purpose
                span.purpose #{purpose}

    script(src="../scripts/clipboard.min.js")
    script(src="../scripts/main.js")
